<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Online-library</title>

    <style>
      body{
        /*background: #d2d7dd;*/
        background-image: url(https://i.pinimg.com/originals/e5/94/70/e594706ff5486cd6bcc95affd28490ae.jpg);
        background-size: 100% 100% no-repeat;
        width: 1500px;
        border:thick double green
      }
      .genres, footer{
        display: flex;
        justify-content: space-around;
        line-height: 40px;
        font-size: 20px;
        background: #0a4d33;
        box-shadow: 4px 6px 2px rgba(10, 1, 1, 0.932);
        border-bottom-right-radius: 50px;
        border-bottom-left-radius: 50px;
      }
      header, .genres{
        color:white
      }
      header {
        display: flex;
        justify-content: space-around;
        font-family: cursive;
        background: #0a4d33;
        box-shadow: 4px 6px 2px rgba(10, 1, 1, 0.932);
        border-top-right-radius: 50px;
        border-top-left-radius: 50px;
      }
      header a,.genres a, footer h1{
        color: white;
      }
      footer{
        width: 100%;
        font-family: cursive;
      }
      a{
        text-decoration: none;
        color:#0a4d33;
      }
      
      .book{
        flex-wrap: wrap
      }
      .book, .book0{
        width: 100%;
        display: flex;
        padding-left: 80px;
        margin-bottom: 60px;
      }
      .info{
        padding: 50px;
        font-size: 20px;
        font-family: cursive;
}
      .book img {
        width: 350px ;
      }
      .imgBook img{
        box-sizing: border-box;
        width: 250px;
        height: 350px;
        max-width: 100%;
        max-height: 100%;
        margin-right: 70px;
      }
      .clients{
        margin-left: auto;
        margin-right: auto;
        width: 45em;
      }
      td {
        background:#0a4d33;;
        padding: 5px;
        font-size: 25px;
      }
    </style>
  </head>
  <body>

    <header>
        <!--<h1><a href="/clients/books">Главная</a></h1>-->
        <h1><a href="/clients/610a829b9bd0ffe408c62352/books">Главная</a></h1>
        <h1> Онлайн-Библиотека</h1>
        <h1><a href="/admin/clients">Админ</a></h1>
    </header>

    <ul class="genres">
      {{#each genres}}
        <h2><a href="/books/genres/{{_id}}">{{genreName}}</a></h2>
      {{/each}}
    </ul>
   
    {{{body}}}

    <footer>
      <!--пагинация
        <a href="/clients/books?page=1&limit=4"></a>
        <a href="/clients/books?page=2&limit=4"> <h1>next>>></h1></a>-->
      <h1>@library</h1>
    </footer>

  </body>
</html>